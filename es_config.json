					"output_unigrams": false
				},
				"swedish_stemmer": {
					"type": "stemmer",
					"language": "swedish"
				},
				"swedish_stop": {
					"type": "stop",
					"stopwords": "_swedish_"
				}
			},
			"analyzer": {
				"custom_shingle_analyzer": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"standard",
						"lowercase",
						"swedish_stop",
						"custom_shingle_filter"
					],
					"char_filter" : [
						"html_strip"
					]
				},
				"custom_html_analyzer": {
					"type": "custom",
